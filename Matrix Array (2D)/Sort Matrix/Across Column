#include <stdio.h>
void transpose(int r, int c, int a[r][c], int b[c][r])
{
    for (int i=0; i<r; i++)
    {
        for (int j=0; j<c; j++)
        {
            b[j][i]=a[i][j];
        }
    }
}
void sort (int n, int m, int a[][m])
{
    for (int i=0; i<m; i++)
    {
        for (int j=0; j<m; j++)
        {
            if (a[n][i]<a[n][j])
            {
                int temp=a[n][i];
                a[n][i]=a[n][j];
                a[n][j]=temp;
            }
        }
    }
}
int main()
{
    int r,c;
    printf ("Enter matrix row: ");
    scanf ("%d",&r);
    printf ("Enter matrix column: ");
    scanf ("%d",&c);
    int arr[r][c],tran[c][r];
    printf ("Enter matrix element:\n");
    for (int i=0; i<r; i++)
    {
        for (int j=0; j<c; j++)
        {
            scanf ("%d",&arr[i][j]);
        }
    }
    printf ("Given matrix:\n");
    for (int i=0; i<r; i++)
    {
        for (int j=0; j<c; j++)
        {
            printf ("%d ",arr[i][j]);
        }
        printf ("\n");
    }
    transpose(r,c,arr,tran);
    for (int i=0; i<c; i++)
    {
        sort(i,r,tran);
    }
    transpose(c,r,tran,arr);
    printf ("Sorted matrix across column:\n");
    for (int i=0; i<r; i++)
    {
        for (int j=0; j<c; j++)
        {
            printf ("%d ",arr[i][j]);
        }
        printf ("\n");
    }
    return 0;
}
