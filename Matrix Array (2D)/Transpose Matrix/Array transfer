#include <stdio.h>
int main()
{
    int i,j,r,c;
    printf ("Enter the row: ");
    scanf ("%d",&r);
    printf ("Enter the column: ");
    scanf ("%d",&c);
    int mat[r][c],tmat[c][r];
    printf ("Enter the matrix:\n");
    for (i=0; i<r; i++)
    {
        for (j=0; j<c; j++)
        {
            scanf ("%d",&mat[i][j]);
        }
    }
    for (i=0; i<c; i++)
    {
        for (j=0; j<r; j++)
        {
            tmat[i][j]=mat[j][i];
        }
    }
    printf ("The Transpose matrix:\n");
    for (i=0; i<c; i++)
    {
        for (j=0; j<r; j++)
        {
            printf ("%d ", tmat[i][j]);
        }
        printf ("\n");
    }
    return 0;
}
