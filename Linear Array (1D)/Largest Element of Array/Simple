#include <stdio.h>
int main()
{
    int i,n,max;
    printf ("Enter the size of array: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    max=arr[0];
    for (i=0; i<n; i++)
    {
        if (arr[i]>max)
        {
            max=arr[i];
        }
    }
    printf ("The Largest number: %d.",max);
    return 0;
}
