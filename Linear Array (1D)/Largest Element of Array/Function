#include <stdio.h>
void input (int a[], int n)
{
    for (int i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
}
int find_max (int a[], int n)
{
    int max=a[0];
    for (int i=0; i<n; i++)
    {
        if (a[i]>max)
        {
            max=a[i];
        }
    }
    return max;
}
int main()
{
    int n;
    printf ("Enter size of array: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers : ",n);
    input(arr,n);
    printf ("The Largest number: %d\n",find_max(arr,n));
    return 0;
}
