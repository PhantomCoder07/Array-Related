#include <stdio.h>
int main()
{
    int i,n,s,count=0;
    printf ("Enter the size: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d elements: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    fflush (stdin);
    printf ("Enter the element to search: ");
    scanf ("%d",&s);
    for (i=0; i<n; i++)
    {
        if (arr[i]==s)
        {
            printf ("The element is found: %d\n", arr[i]);
            printf ("First position: %d\n",i+1);
            break;
        }
    }
    return 0;
}
