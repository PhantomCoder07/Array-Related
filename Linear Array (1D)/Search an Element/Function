#include <stdio.h>
void find (int a[], int n, int s)
{
    for (int i=0; i<n; i++)
    {
        if (a[i]==s)
        {
            printf ("The element is found: %d\n", a[i]);
            printf ("First position: %d\n",i+1);
            break;
        }
    }
}
int main()
{
    int i,n,s,count=0;
    printf ("Enter the size: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d elements: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    printf ("Enter the element to search: ");
    scanf ("%d",&s);
    find(arr,n,s);
    return 0;
}
