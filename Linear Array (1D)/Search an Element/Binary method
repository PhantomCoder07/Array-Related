#include <stdio.h>
int search(int arr[], int n, int m)
{
    int l=0;
    int r=n-1;
    while (l<=r)
    {
        int mid=(l+r)/2;
        if (arr[mid]==m)
            return mid;
        else if (arr[mid]<m)
            l=mid+1;
        else
            r=mid-1;
    }
    return -1;
}
int main()
{
    int n,m;
    printf("Enter array size: ");
    scanf("%d",&n);
    int arr[n];
    printf("Enter array elements in ascending order: ");
    for (int i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Enter element to search: ");
    scanf("%d",&m);
    int ans=search(arr,n,m);
    if (ans!=-1)
        printf("The element is found at position: %d\n",ans+1);
    else
        printf("The element is not found\n");
    return 0;
}
