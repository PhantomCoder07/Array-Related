#include <stdio.h>
void input (int a[], int n)
{
    for (int i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
}
int find_max (int a[], int n)
{
    int max1=a[0];
    int max2=0;
    for (int i=1; i<n; i++)
    {
        if (a[i]>max1)
        {
            max2=max1;
            max1=a[i];
        }
        else if (a[i]>max2 && a[i]<max1)
            max2=a[i];
    }
    return max2;
}
int main()
{
    int n;
    printf ("Enter size of array: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers : ",n);
    input(arr,n);
    printf ("The 2nd Largest number: %d.",find_max(arr,n));
    return 0;
}
