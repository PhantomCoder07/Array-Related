#include <stdio.h>
int main()
{
    int i,n,max1,max2=0;
    printf ("Enter array size: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    max1=arr[0];
    for (i=1; i<n; i++)
    {
        if (arr[i]>max1)
        {
            max2=max1;
            max1=arr[i];
        }
        else if (arr[i]>max2 && arr[i]<max1)
            max2=arr[i];
    }
    printf ("The 1st largest: %d\n",max1);
    printf ("The 2nd largest: %d",max2);
    return 0;
}
