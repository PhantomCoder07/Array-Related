#include <stdio.h>
struct num
{
    int a;
};
int main()
{
    int i,n,sum;
    float avg;
    printf ("Enter array size: ");
    scanf ("%d",&n);
    struct num arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i].a);
        sum+=arr[i].a;
    }
    printf ("The sum of numbers: %d",sum);
    avg=(float)sum/n;
    printf ("\nThe average numbers: %.2f",avg);
    return 0;
}
