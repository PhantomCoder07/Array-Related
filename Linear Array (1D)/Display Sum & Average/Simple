#include <stdio.h>
int main()
{
    int i,sum=0,n;
    float avg;
    printf ("Enter array size: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
        sum=sum+arr[i];
    }
    printf ("\nThe sum of numbers: %d",sum);
    avg= (float) sum/n;
    printf ("\nThe average numbers: %.2f",avg);
    return 0;
}
