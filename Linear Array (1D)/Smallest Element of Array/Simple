#include <stdio.h>
int main()
{
    int i,n,min;
    printf ("Enter the size of array: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    min=arr[0];
    for (i=0; i<n; i++)
    {
        if (arr[i]<min)
        {
            min=arr[i];
        }
    }
    printf ("The Smallest number: %d\n",min);
    return 0;
}
