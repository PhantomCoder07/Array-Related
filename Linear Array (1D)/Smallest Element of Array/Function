#include <stdio.h>
void input (int a[], int n)
{
    for (int i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
}
int find_min (int a[], int n)
{
    int min=a[0];
    for (int i=0; i<n; i++)
    {
        if (a[i]<min)
        {
            min=a[i];
        }
    }
    return min;
}
int main()
{
    int n;
    printf ("Enter size of array: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers : ",n);
    input(arr,n);
    printf ("The Smallest number: %d\n",find_min(arr,n));
    return 0;
}
