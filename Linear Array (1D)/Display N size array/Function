#include <stdio.h>
void input (int a[], int n)
{
    for (int i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
}
void display (int a[], int n)
{
    for (int i=0; i<n; i++)
    {
        printf ("%d ",a[i]);
    }
}
int main()
{
    int n;
    printf ("Enter size of array: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    input(arr,n);
    printf ("The given numbers: ");
    display(arr,n);
    return 0;
}
