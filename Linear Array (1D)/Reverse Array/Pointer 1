#include <stdio.h>
int main()
{
    int i,n,*p;
    printf ("Enter size of array: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    p=&arr[n-1];
    printf ("The given numbers in reverse order: ");
    for (i=0; i<n; i++)
    {
        printf ("%d ",*p--);
    }
    return 0;
}
