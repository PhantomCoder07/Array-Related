#include <stdio.h>
int max (int x, int y)
{
    return (x>y)? x : y;
}
int max_sum (int n, int arr[])
{
    int i,j,sum,result;
    sum=0;
    result=arr[0];
    for (i=0; i<n; i++)
    {
        sum += arr[i];
        result = max(sum,result);
        if (sum<0)
        {
            sum=0;
        }
    }
    return result;
}
int main()
{
    int n;
    printf("Enter array size: ");
    scanf("%d",&n);
    int arr[n];
    printf("Enter array elements: ");
    for (int i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    printf ("Maximum subarray sum: %d\n",max_sum(n,arr));
    return 0;
}
